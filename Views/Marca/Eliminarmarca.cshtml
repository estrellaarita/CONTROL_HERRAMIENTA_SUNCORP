@model CONTROL_HERRAMIENTA_SUNCORP.Models.Marca

@{
    ViewBag.Title = "Eliminarmarca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="row" style="margin-top:30px">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
    <div class="col-sm-12 text-center">
        <!-- Agregué la clase text-center -->
        <div class="panel panel-warning" style="display: inline-block;">
            <!-- Agregué display: inline-block -->
            <div class="panel-heading">
                <h4>ELIMINAR MARCA</h4><br />
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar el marca @Html.DisplayTextFor(m => m.DECRIPCION_MARCA) ?
                </div>

                <form action="@Url.Action("Eliminarmarca","Marca")" method="post">
                    <input type="hidden" class="form-control" name="Idmarca" value="@Html.DisplayTextFor(m => m.ID_MARCA)" /><br />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("Marca","Marca")">Volver</a>
                </form>

            </div>
        </div>


    </div>
</div>




