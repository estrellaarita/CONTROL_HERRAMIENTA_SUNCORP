@model CONTROL_HERRAMIENTA_SUNCORP.Models.Departamento

@{
    ViewBag.Title = "registrardept";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>

    <h3 class="text-center mt-4 justify">Registrar departamento</h3>
    <br />

    <div class="container mt-3 d-flex justify-content-center col-sm-12">
        <form action="@Url.Action("registrardept","Departamento")" method="post">


            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Departamento</label>
                    <input type="text" class="form-control" name="DECRIPCION_DEPARTAMENTO" required" placeholder="Departamento"><br />
                </div>
            </div>

            <style>
                .center-input {
                    text-align: left; /* Centra el contenido en línea */
                    margin-top: 20px; /* Espacio superior opcional */
                }

                    .center-input input {
                        display: inline-block; /* Permite centrar el input dentro del contenedor */
                    }
            </style>

            <style>


                .form-group label {
                    display: block; /* Asegura que el label ocupe una línea completa */
                    margin-bottom: 10px; /* Espacio entre el label y el DropDownList */
                }
            </style>

            @if (ViewData["MENSAJEDEPT"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["MENSAJEDEPT"]
                </div>
            }

            <button type="submit" class="btn btn-primary ml-2" style="font-size: 20px; color: #FFFFFF;">
                <i class="fas fa-check" aria-hidden="true"></i>
            </button>
            <a class="btn btn-warning ml-2" href="@Url.Action("Departamento","Departamento")" style="font-size: 20px; color: #FFFFFF;">
                <i class="fas fa-arrow-left" aria-hidden="true"></i>
            </a>

        </form>


    </div>
</body>
</html>

