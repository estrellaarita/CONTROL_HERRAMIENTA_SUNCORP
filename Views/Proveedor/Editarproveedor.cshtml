@model CONTROL_HERRAMIENTA_SUNCORP.Models.Proveedor

@{
    ViewBag.Title = "Editarproveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>

    <h3 class="text-center mt-4 justify">Actualizar proveedor</h3>
    <br />

    <div class="container mt-3 d-flex justify-content-center col-sm-12">
        <form action="@Url.Action("Editarproveedor","Proveedor")" method="post">

            <input type="hidden" class="form-control" name="ID_PROVEEDOR" value="@Html.DisplayTextFor(m=>m.ID_PROVEEDOR)" />


            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>RTN</label>
                    <input type="number" class="form-control" name="RTN" required value="@Html.DisplayTextFor(m=>m.RTN)" /><br />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Nombre proveedor</label>
                    <input type="text" class="form-control" name="NOMBRE_PROVEEDOR" required value="@Html.DisplayTextFor(m=>m.NOMBRE_PROVEEDOR)" /><br />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Correo electrónico</label>
                    <input type="email" class="form-control" name="CORREO_ELECTRONICO" required value="@Html.DisplayTextFor(m=>m.CORREO_ELECTRONICO)" /><br />
                </div>
            </div>

            @if (ViewData["MENSAJEPROVEEDOR"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["MENSAJEPROVEEDOR"]
                </div>
            }
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            <button type="submit" class="btn btn-primary ml-4" style="font-size: 20px; color: #FFFFFF;">
                <i class="fas fa-sync-alt" aria-hidden="true"></i>
            </button>
            <a class="btn btn-warning ml-4" href="@Url.Action("Proveedor","Proveedor")" style="font-size: 20px; color: #FFFFFF;">
                <i class="fas fa-arrow-left" aria-hidden="true"></i>
            </a>


        </form>

        </div>
 </body>
</html>