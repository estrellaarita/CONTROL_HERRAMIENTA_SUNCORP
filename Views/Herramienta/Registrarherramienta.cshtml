@model CONTROL_HERRAMIENTA_SUNCORP.Models.Herramienta

@{
    ViewBag.Title = "Registrarherramienta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>

    <h3 class="text-center mt-3 justify">Registrar herramienta</h3>

    <div class="container mt-3 d-flex justify-content-center col-sm-12">
        <form action="@Url.Action("Registrarherramienta","Herramienta")" method="post">


            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="ID_TIPO_HERRAMIENTA">Tipo herramienta</label><br />
                    <select class="form-control" name="ID_TIPO_HERRAMIENTA" id="ID_TIPO_HERRAMIENTA_s" required>
                        <option value="">Seleccione un tipo de herramienta</option>
                        @foreach (var itemt in ViewBag.Tipo)
                        {
                            <option value="@itemt.Value">@itemt.Text</option>
                        }
                    </select>
                </div>
            </div>
            <br />

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="ID_MARCA">Marca</label><br />
                    <select class="form-control" name="ID_MARCA" id="ID_MARCA_M" required>
                        <option value="">Seleccione una marca</option>
                        @foreach (var itemM in ViewBag.Marca)
                        {
                            <option value="@itemM.Value">@itemM.Text</option>
                        }
                    </select>
                </div>
            </div>
            <br />

  
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Modelo</label>
                    <input type="text" class="form-control" name="Modelo" required /><br />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Comentario</label>
                    <textarea type="text" class="form-control" name="Comentario"></textarea><br />
                </div>
            </div>

            <button type="submit" class="btn btn-primary ml-2" style="font-size: 20px; color: #FFFFFF;">
                <i class="fas fa-check" aria-hidden="true"></i>
            </button>
            <a class="btn btn-warning ml-2" href="@Url.Action("Herramienta","Herramienta")" style="font-size: 20px; color: #FFFFFF;">
                <i class="fas fa-arrow-left" aria-hidden="true"></i>
            </a>

        </form>
    </div>

    @section Scripts{

        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

        <script type="text/javascript">

            $(document).ready(function () {
                $('#ID_TIPO_HERRAMIENTA_s').select2();
                $('#ID_MARCA_M').select2();
            });

        </script>
    }
</body>
</html>

