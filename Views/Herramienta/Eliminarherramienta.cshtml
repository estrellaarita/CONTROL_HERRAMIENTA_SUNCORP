@model CONTROL_HERRAMIENTA_SUNCORP.Models.Herramienta

@{
    ViewBag.Title = "Eliminarherramienta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>ELIMINAR HERRAMIENTA</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar la herramienta @Html.DisplayTextFor(m => m.MODELO) ?
                </div>

                <form action="@Url.Action("Eliminarherramienta","Herramienta")" method="post">
                    <input type="hidden" class="form-control" name="Idherramienta" value="@Html.DisplayTextFor(m => m.ID_HERRAMIENTA)" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("Herramienta","Herramienta")">Volver</a>
                </form>

            </div>
        </div>


    </div>
</div>



