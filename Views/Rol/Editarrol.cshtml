@model CONTROL_HERRAMIENTA_SUNCORP.Models.Rol

@{
    ViewBag.Title = "Editarrol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12 text-center">
        <!-- Agregué la clase text-center -->
        <div class="panel panel-warning" style="display: inline-block;">
            <!-- Agregué display: inline-block -->
            <div class="panel-heading">
                <h4>ACTUALIZAR ROL</h4><br />
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Editarrol","Rol")" method="post">

                    <div class="form-group">
                        <label style="font-weight: bold; font-size: 1.2em;">Rol</label>

                        <input type="hidden" class="form-control" name="ID_ROL" value="@Html.DisplayTextFor(m=>m.ID_ROL)" />


                        <style>
                            .center-input {
                                text-align: center; /* Centra el contenido en línea */
                                margin-top: 20px; /* Espacio superior opcional */
                            }

                                .center-input input {
                                    display: inline-block; /* Permite centrar el input dentro del contenedor */
                                }
                        </style>



                        <div class="form-container">
                            <div class="center-input">
                         
                                    <input type="text" class="form-control" name="DECRIPCION_ROL" value="@Html.DisplayTextFor(m=>m.DECRIPCION_ROL)" /><br />
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                </div>
                                </div>
                         </div>
                       
                                @if (ViewData["MENSAJEROL"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["MENSAJEROL"]
                                    </div>
                                }
                                <button type="submit" class="btn btn-primary">Actualizar</button>
                                <a class="btn btn-warning" href="@Url.Action("Rol","Rol")">Volver</a>

</form>         
            </div>
        </div>
    </div>
</div>

