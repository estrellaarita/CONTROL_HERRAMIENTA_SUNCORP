@model IEnumerable<CONTROL_HERRAMIENTA_SUNCORP.Models.Sucursal>

@{
    ViewBag.Title = "sucursal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Lista de sucursal</h4>
            </div>

            <form asp-controller="Sucursal" asp-action="sucursal">
                <p>
                    <input type="text" name="buscar" class="form-text" />
                    <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
                </p>
            </form>

            </div>
            <div class="panel-body">
                <a class="btn btn-success" href="@Url.Action("Crear", "Sucursal")">Crear Nuevo</a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre sucursalL</th>
                                <th>Correo electronico</th>
                                <th>Direccion</th>
                                <th>Empresa</th>
                                <th>Comentario</th>
                                <th>Fecha registro</th>
                                <th style="width:150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (CONTROL_HERRAMIENTA_SUNCORP.Models.Sucursal item in Model)
                            {
                                <tr>
                                    <td>@item.NOMBRE_SUCURSAL</td>
                                    <td>@item.CORREO_ELECTRONICO</td>
                                    <td>@item.DIRECCION</td>
                                    <td>@item.EMPRESA.NOMBRE_EMPRESA</td>
                                    <td>@item.COMENTARIO</td>
                                    <td>@item.FECHA_REGISTRO</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("Editarsucur","Sucursal", new { Idsucursal = item.ID_SUCURSAL })">Editar</a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Eliminarsucur","Sucursal", new { Idsucursal= item.ID_SUCURSAL })">Eliminar</a>
                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
