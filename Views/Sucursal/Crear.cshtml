@model CONTROL_HERRAMIENTA_SUNCORP.Models.Sucursal

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

</head>

<body>

    <h3 class="text-center mt-3 justify">Registrar sucursal</h3>
    <br />

    <div class="container mt-3 d-flex justify-content-center col-sm-12">
        <form action="@Url.Action("Crear","Sucursal")" method="post">


            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Nombre sucursal</label>
                    <input type="text" class="form-control" name="NOMBRE_SUCURSAL" required /><br />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Correo electrónico</label>
                    <input type="email" class="form-control" name="CORREO_ELECTRONICO" required /><br />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Dirección </label>
                    <textarea type="text" class="form-control" name="DIRECCION" required></textarea><br />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="ID_EMPRESA">Empresa</label><br />
                    <select id="ID_EMPRESA" class="form-control" name="ID_EMPRESA" required>
                        <option value="">Seleccione una empresa</option>
                        @foreach (var itemee in ViewBag.iEmpresas)
                        {
                            <option value="@itemee.Value">@itemee.Text</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Comentario</label>
                    <textarea type="text" class="form-control" rows="5" name="COMENTARIO"></textarea><br />
                </div>
            </div>

            @if (ViewData["MENSAJESUCURSAL"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["MENSAJESUCURSAL"]
                </div>
            }

            <button type="submit" class="btn btn-primary ml-2" style="font-size: 20px; color: #FFFFFF;">
                <i class="fas fa-check" aria-hidden="true"></i>
            </button>
            <a class="btn btn-warning ml-2" href="@Url.Action("sucursal","Sucursal")" style="font-size: 20px; color: #FFFFFF;">
                <i class="fas fa-arrow-left" aria-hidden="true"></i>
            </a>

        </form>


    </div>


    @section Scripts{

        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

        <script type="text/javascript">

            $(document).ready(function () {
                $('#ID_EMPRESA').select2();
            });

        </script>
    }
</body>
</html>
