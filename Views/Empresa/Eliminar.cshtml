@model CONTROL_HERRAMIENTA_SUNCORP.Models.Empresa

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>ELIMINAR EMPRESA</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar la empresa @Html.DisplayTextFor(m => m.NOMBRE_EMPRESA) ?
                </div>

                <form action="@Url.Action("Eliminar","Empresa")" method="post">
                    <input type="hidden" class="form-control" name="Idempresa" value="@Html.DisplayTextFor(m => m.ID_EMPRESA)" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("empresa","Empresa")">Volver</a>
                </form>

            </div>
        </div>


    </div>
</div>

