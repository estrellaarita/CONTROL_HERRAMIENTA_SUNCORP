@model CONTROL_HERRAMIENTA_SUNCORP.Models.Empleado

@{
    ViewBag.Title = "Eliminaremple";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="row" style="margin-top:30px">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
    <div class="col-sm-12 text-center">
        <!-- Agregué la clase text-center -->
        <div class="panel panel-warning" style="display: inline-block;">
            <!-- Agregué display: inline-block -->
            <div class="panel-heading">
                <h4>ELIMINAR EMPELADO</h4><br />
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar el empleado @Html.DisplayTextFor(m => m.PRIMER_NOMBRE)?
                </div>

                <form action="@Url.Action("Eliminaremple","Empleado")" method="post">
                    <input type="hidden" class="form-control" name="Idempleado" value="@Html.DisplayTextFor(m => m.ID_EMPLEADO)" />

                    <button type="submit" class="btn btn-danger" style="font-size: 20px; color: #FFFFFF;">
                        <i class="fas fa-trash-alt" aria-hidden="true"></i>
                    </button>
                    <a class="btn btn-warning" href="@Url.Action("empleado","Empleado")" style="font-size: 20px; color: #FFFFFF;">
                        <i class="fas fa-arrow-left" aria-hidden="true"></i>
                    </a>

                </form>

            </div>
        </div>


    </div>
</div>

