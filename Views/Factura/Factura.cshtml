@model IEnumerable<CONTROL_HERRAMIENTA_SUNCORP.Models.Factura>

@{
    ViewBag.Title = "FACTURA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Lista de Empresas</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>
<body>
    <div class="row" style="margin-top:30px">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bg-yellow">
                    <h4>Lista de facturas</h4>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" style="font-size: 20px; padding: 6px 16px;" href="@Url.Action("Registrarfactura", "Factura")">
                        <i class="fas fa-plus-circle"></i>
                    </a>
                    <hr />
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Numero factura</th>
                                    <th>Usuario</th>
                                    <th>Fecha compra</th>
                                    <th>Proveedor</th>
                                    <th>Comentario</th>
                                    <th>Foto</th>
                                    <th>Fecha registro</th>
                                    <th style="width:150px"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null)
                                {
                                    foreach (CONTROL_HERRAMIENTA_SUNCORP.Models.Factura item in Model)
                                    {
                                        <tr>
                                            <td>@item.NUMERO_FACTURA</td>
                                            <td>@item.USUARIO_BD.USUARIO</td>
                                            <td>@item.FECHA_COMPRA</td>
                                            <td>@item.PROVEEDOR.NOMBRE_PROVEEDOR</td>
                                            <td>@item.COMENTARIO</td>
                                            <td>
                                                @if (item.FOTO != null)
                                                {
                                                    <img src="@Url.Action("ConvertirImagen", "Factura", new { codigo = item.ID_FACTURA })" alt="Imagen de factura" width="200" height="160" />
                                                }
                                                else
                                                {
                                                    <p>No hay imagen</p>
                                                }
                                            </td>
                                            <td>@item.FECHA_REGISTRO</td>
                                            <td class="text-center">
                                                <a class="btn btn-primary btn-sm" style="font-size: 15px; padding: 4px 10px; " href="@Url.Action("Editarfactura","Factura", new { Idfactura = item.ID_FACTURA})">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a class="btn btn-danger btn-sm" style="font-size: 15px; padding: 4px 10px;" href="@Url.Action("Eliminarfactura","Factura", new { Idfactura= item.ID_FACTURA})">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>

                                        </tr>
                                    }
                                }

                                else
                                {
                                    <p>No hay facturas disponibles.</p>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <!--   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>-->
    <!-- Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <style>
        .bg-yellow {
            background-color: #F7DC6F; /* Amarillo claro */
        }
    </style>

</body>
</html>