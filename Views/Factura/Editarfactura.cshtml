@model CONTROL_HERRAMIENTA_SUNCORP.Models.Factura

@{
    ViewBag.Title = "Editarfactura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:25px">
    <div class="col-sm-12 text-center">
        <!-- Agregué la clase text-center -->
        <div class="panel panel-warning" style="display: inline-block;">
            <!-- Agregué display: inline-block -->
            <div class="panel-heading">
                <h4>EDITAR FACTURA</h4><br />
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Editarfactura", "Factura")" enctype="multipart/form-data" method="post">

                    <input type="hidden" class="form-control" name="ID_FACTURA" value="@Html.DisplayTextFor(m=>m.ID_FACTURA)" /><br />

                    <style>
                        .center-input {
                            text-align: center; /* Centra el contenido en línea */
                            margin-top: 20px; /* Espacio superior opcional */
                        }

                        .center-input input {
                           display: inline-block; /* Permite centrar el input dentro del contenedor */
                        }
                    </style>

                    <div class="center-input">
                        <div class="form-group">
                            <label>Numero factura</label>
                            <input type="text" class="form-control" name="Numero_factura" required value="@Html.DisplayTextFor(m=>m.NUMERO_FACTURA)" /><br />
                        </div>
                    </div>

                    <style>
                        .form-container {
                            text-align: center; /* Centra el contenido en línea */
                            margin: 50px; /* Espacio opcional alrededor del contenedor */
                        }


                        .form-group label {
                            display: block; /* Asegura que el label ocupe una línea completa */
                            margin-bottom: 10px; /* Espacio entre el label y el DropDownList */
                        }
                    </style>

                    <div class="form-container">
                        <div class="center-input">
                            <div class="form-group">
                                <label for="ID_USUARIO_BD">Usuario</label>
                                @Html.DropDownListFor(model => model.ID_USUARIO_BD, (SelectList)ViewBag.aUsuario, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="center-input">
                         <div class="form-group">
                            <label>Fecha de Compra</label>
                            <input type="date" class="form-control" name="Fecha_compra" required value="@Model.FECHA_COMPRA.ToString("yyyy-MM-dd")" />
                         </div>
                    </div>

                    <div class="form-container">
                         <div class="center-input">
                             <div class="form-group">
                               <label for="ID_MARCA">Proveedor</label>
                               @Html.DropDownListFor(model => model.ID_PROVEEDOR, (SelectList)ViewBag.iProveedor, new { @class = "form-control" })
                               </div>
                         </div>
                    </div>

                    <div class="center-input">
                          <div class="form-group">
                            <label>Comentario</label>
                            <input type="text" class="form-control" name="Comentario" value="@Html.DisplayTextFor(m=>m.COMENTARIO)" /><br />
                          </div>
                    </div>
                     <br />

                    <div class="form-group">
                      <label>Imagen actual</label><br />
                       <div class="col-md-10">
                         <img width="365" height="300" src="@Url.Action("ConvertirImagen", "Factura", new { codigo = Model.ID_FACTURA})" alt="Imagen de factura" /><br />
                       </div>
                    </div>
                    <br />

                    <div class="form-group">
                      <label>Nueva imagen</label><br />
                      <input type="file" class="form-control" id="FOTO" name="upload" value="@Html.DisplayTextFor(m=>m.FOTO)" /><br />
                    </div>

                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a class="btn btn-warning" href="@Url.Action("FACTURA","Factura")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>

